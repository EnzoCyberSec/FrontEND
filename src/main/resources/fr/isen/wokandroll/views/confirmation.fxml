<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.isen.wokandroll.controllers.ConfirmationController"
            styleClass="root">

    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="topbar" style="-fx-padding: 10 20;">
                <ImageView styleClass="logoSmall" fitWidth="180" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.jpg"/>
                    </image>
                </ImageView>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="18" alignment="CENTER" styleClass="confirmContent">

            <Label text="âœ“"
                   styleClass="confirmIcon"
                   style="-fx-font-size: 60px; -fx-text-fill: #22c55e;"/>

            <Label text="Order Confirmed!"
                   styleClass="confirmTitle"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <Label text="Thank you for your visit!"
                   styleClass="confirmSubtitle"
                   style="-fx-font-size: 18px; -fx-text-fill: #666;"/>

            <VBox spacing="8"
                  alignment="CENTER"
                  styleClass="confirmInfoBox"
                  style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-background-radius: 10; -fx-max-width: 400;">

                <Label fx:id="orderNumber"
                       text="Order number: #..."
                       styleClass="confirmInfoTitle"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <Label fx:id="estimatedTime"
                       text="Estimated time: ..."
                       styleClass="confirmInfoText"
                       style="-fx-font-size: 16px; -fx-text-fill: #555;"/>
            </VBox>

        </VBox>
    </center>


</BorderPane>
