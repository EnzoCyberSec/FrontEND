<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.isen.wokandroll.controllers.ProductDetailsController"
            styleClass="product-details-root"
            style="-fx-background-color: white;
                   -fx-background-radius: 30;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 30, 0, 0, 0);
                   -fx-padding: 40; -fx-min-width: 600; -fx-min-height: 700;">

    <top>
        <VBox alignment="CENTER" spacing="25">
            <ImageView fx:id="productImage"
                       fitHeight="300"
                       fitWidth="350"
                       preserveRatio="true">
                <image>
                    <Image url="@../images/logo.jpg"/>
                </image>
            </ImageView>

            <Label fx:id="productName"
                   text="Product Name"
                   style="-fx-font-size: 36px;
                          -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <Label fx:id="productPrice"
                   text="â‚¬12.50"
                   style="-fx-font-size: 32px;
                          -fx-font-weight: bold; -fx-text-fill: #e46725;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 30 0;">

            <Label fx:id="productDescription"
                   text="Description du produit..."
                   wrapText="true"
                   style="-fx-font-size: 20px; -fx-text-fill: #666; -fx-text-alignment: center;"
                   maxWidth="500"/>

            <VBox fx:id="optionsContainer"
                  spacing="15"
                  alignment="CENTER_LEFT"
                  style="-fx-background-color: #f9f9f9;
                         -fx-padding: 20; -fx-background-radius: 15;"
                  maxWidth="500">
            </VBox>

        </VBox>
    </center>

    <bottom>
        <VBox spacing="25">
            <HBox alignment="CENTER" spacing="25">
                <Button text="-"
                        onAction="#decreaseQuantity"
                        style="-fx-font-size: 28px;
                               -fx-min-width: 60px; -fx-min-height: 60px;
                               -fx-background-radius: 30;"/>

                <Label fx:id="quantityLabel"
                       text="1"
                       style="-fx-font-size: 32px;
                              -fx-font-weight: bold;"/>

                <Button text="+"
                        onAction="#increaseQuantity"
                        style="-fx-font-size: 28px;
                               -fx-min-width: 60px; -fx-min-height: 60px;
                               -fx-background-radius: 30;"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Close"
                        onAction="#closeWindow"
                        style="-fx-background-color: #eee;
                               -fx-text-fill: #333;
                               -fx-font-size: 24px;
                               -fx-background-radius: 40;
                               -fx-padding: 15 40;
                               -fx-cursor: hand;"/>

                <Button fx:id="addToCartBtn"
                        text="Add to cart"
                        onAction="#addToCart"
                        style="-fx-background-color: #e46725;
                               -fx-text-fill: white;
                               -fx-font-size: 24px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 40;
                               -fx-padding: 15 40;
                               -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>