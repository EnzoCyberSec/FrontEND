<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.controllers.MenuWizardController"
            style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 0); -fx-padding: 20; -fx-min-width: 800; -fx-min-height: 600;">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 20 0;">
            <Label fx:id="stepTitle" text="Ã‰tape 1 : Choisissez votre Plat" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Label fx:id="stepProgress" text="1 / 2" style="-fx-font-size: 16px; -fx-text-fill: #e46725;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <TilePane fx:id="optionsGrid" hgap="20" vgap="20" prefColumns="3" alignment="TOP_CENTER" style="-fx-padding: 10;">
                </TilePane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button text="Annuler le menu" onAction="#cancelMenu"
                    style="-fx-background-color: #eee; -fx-text-fill: #333; -fx-font-size: 16px; -fx-background-radius: 30; -fx-padding: 10 30; -fx-cursor: hand;"/>
        </VBox>
    </bottom>

</BorderPane>