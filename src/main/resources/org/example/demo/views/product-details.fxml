<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.controllers.ProductDetailsController"
            styleClass="product-details-root"
            style="-fx-background-color: white;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 0);
                   -fx-padding: 20;">

    <top>
        <VBox alignment="CENTER" spacing="15">
            <ImageView fx:id="productImage"
                       fitHeight="200"
                       fitWidth="250"
                       preserveRatio="true">
                <image>
                    <Image url="@../images/logo.jpg"/>
                </image>
            </ImageView>

            <Label fx:id="productName"
                   text="Product Name"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <Label fx:id="productPrice"
                   text="â‚¬12.50"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e46725;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20 0;">

            <Label fx:id="productDescription"
                   text="Description du produit..."
                   wrapText="true"
                   style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-text-alignment: center;"
                   maxWidth="400"/>

            <VBox fx:id="optionsContainer"
                  spacing="10"
                  alignment="CENTER_LEFT"
                  style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 10;"
                  maxWidth="400">
            </VBox>

        </VBox>
    </center>

    <bottom>
        <VBox spacing="15">
            <HBox alignment="CENTER" spacing="15">
                <Button text="-"
                        onAction="#decreaseQuantity"
                        style="-fx-font-size: 18px; -fx-min-width: 40px; -fx-background-radius: 20;"/>

                <Label fx:id="quantityLabel"
                       text="1"
                       style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                <Button text="+"
                        onAction="#increaseQuantity"
                        style="-fx-font-size: 18px; -fx-min-width: 40px; -fx-background-radius: 20;"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Close"
                        onAction="#closeWindow"
                        style="-fx-background-color: #eee;
                               -fx-text-fill: #333;
                               -fx-font-size: 16px;
                               -fx-background-radius: 30;
                               -fx-padding: 10 30;
                               -fx-cursor: hand;"/>

                <Button fx:id="addToCartBtn"
                        text="Add to cart"
                        onAction="#addToCart"
                        style="-fx-background-color: #e46725;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 30;
                               -fx-padding: 10 30;
                               -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>