<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.controllers.MenusController"
            styleClass="root">

    <!-- TOP : logo + titre -->
    <top>
        <VBox>
            <HBox styleClass="topbar">
                <ImageView styleClass="logoSmall" fitWidth="220" preserveRatio="true">
                    <image>
                        <!-- mÃªme style que ton home : chemin ../images -->
                        <Image url="@../images/logo.jpg"/>
                    </image>
                </ImageView>
            </HBox>

            <HBox alignment="CENTER">
                <!-- on garde fx:id="title" car tu l'avais -->
                <Label fx:id="title" text="Menus" styleClass="pageTitle"/>
            </HBox>
        </VBox>
    </top>

    <!-- LEFT : sidebar -->
    <left>
        <VBox styleClass="sidebar">
            <Label text="Categories" styleClass="sidebarTitle"/>

            <!-- Tu peux garder uniquement Retour si tu veux,
                 mais je te mets les catÃ©gories comme ton Home -->
            <Button text="Menus" styleClass="catBtn" onAction="#goToMenus"/>
            <Button text="Starters" styleClass="catBtn" onAction="#goToStarters"/>
            <Button text="Main Dishes" styleClass="catBtn" onAction="#goToMainDishes"/>
            <Button text="Desserts" styleClass="catBtn" onAction="#goToDesserts"/>
            <Button text="Snacks" styleClass="catBtn" onAction="#goToSnacks"/>
            <Button text="Drinks" styleClass="catBtn" onAction="#goToDrinks"/>

            <!-- Bouton retour : on garde ton handler existant -->
            <Button text="â† Back" styleClass="catBtn" onAction="#goBack"/>
        </VBox>
    </left>

    <!-- CENTER : grille produits (tu gardes ton TilePane fx:id="grid") -->
    <center>
        <VBox spacing="12" alignment="TOP_LEFT" styleClass="content">
            <TilePane fx:id="grid"
                      prefColumns="3"
                      hgap="14" vgap="14"
                      styleClass="grid"/>
        </VBox>
    </center>

    <!-- BOTTOM : bouton panier + total -->
    <bottom>
        <HBox alignment="CENTER">
            <BorderPane styleClass="bottomBar">
                <center>
                    <!-- ici on garde ton handler actuel goToCart -->
                    <Button text="ðŸ›’ CART" styleClass="cartBtn" onAction="#goToCart"/>
                </center>

                <right>
                    <!-- si tu nâ€™as pas encore totalLabel dans MenusController, enlÃ¨ve fx:id -->
                    <Label fx:id="totalLabel" text="Total: 0.00 â‚¬" styleClass="totalText"/>
                </right>

                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
            </BorderPane>
        </HBox>
    </bottom>

</BorderPane>
