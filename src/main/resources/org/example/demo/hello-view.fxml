<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.HelloController"
            styleClass="root">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- TOP : Logo (tu avais déjà ImageView) -->
    <top>
        <VBox alignment="CENTER" translateY="-50">
            <ImageView styleClass="logo">
                <image>
                    <Image url="@images/logo.jpg"/>
                </image>
            </ImageView>
        </VBox>
    </top>

    <!-- CENTER : Toucher à gauche + Connexion à droite -->
    <center>
        <VBox alignment="CENTER" spacing="20" translateY="-100">
            <Button text="Toucher pour commencer"
                    styleClass="btn-start"
                    onAction="#goToMenu"/>

            <Button text="Connexion"
                    styleClass="btn-connexion"
                    onAction="#onConnexion"/>
        </VBox>
    </center>


    <!-- BOTTOM : choix de langues -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" translateY="-30">

            <ImageView fitWidth="55" fitHeight="80" preserveRatio="true">
                <image>
                    <Image url="@images/fr.png"/>
                </image>
            </ImageView>

            <ImageView fitWidth="50" fitHeight="80" preserveRatio="true">
                <image>
                    <Image url="@images/en.png"/>
                </image>
            </ImageView>

            <ImageView fitWidth="50" fitHeight="80" preserveRatio="true">
                <image>
                    <Image url="@images/es.png"/>
                </image>
            </ImageView>

        </HBox>
    </bottom>





</BorderPane>
